<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/siswaDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/deleteButton"> <TextView
                android:id="@+id/tv_namaSiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Nama Siswa"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_nisSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="NIS: 12345"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tv_kelasSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Kelas: XII IPA 1"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tv_alamatSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Alamat: Jl. Contoh No. 123"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tv_teleponSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Telepon: 081234567890"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_delete"
                android:contentDescription="Hapus item"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>